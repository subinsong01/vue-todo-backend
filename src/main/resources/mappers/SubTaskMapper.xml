<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.todo.mapper.SubTaskMapper">

  <!-- 특정 Todo의 SubTask 목록 조회 -->
  <select id="findByTodoId" parameterType="long" resultType="com.example.todo.vo.SubTaskVO">
    SELECT
      id,
      todo_id AS todoId,
      content,
      done
    FROM subtask
    WHERE todo_id = #{todoId}
  </select>

  <!-- SubTask 생성 -->
  <insert id="insertSubTask" parameterType="com.example.todo.vo.SubTaskVO"
    useGeneratedKeys="true" keyProperty="id">
    INSERT INTO subtask (todo_id, content, done)
    VALUES (#{todoId}, #{content}, #{done})
  </insert>

  <!-- SubTask 수정 -->
  <update id="updateSubTask">
    UPDATE subtask
    <set>
      <if test="content != null">content = #{content},</if>
      <if test="done != null">done = #{done},</if>
    </set>
    WHERE id = #{id}
  </update>


  <!-- SubTask 삭제 -->
  <delete id="deleteSubTask" parameterType="long">
    DELETE FROM subtask WHERE id = #{id}
  </delete>

</mapper>