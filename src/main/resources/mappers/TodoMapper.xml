<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.todo.mapper.TodoMapper">

  <select id="findByUserId" parameterType="long" resultType="com.example.todo.vo.TodoVO">
    SELECT
      id,
      user_id AS userId,
      title,
      done
    FROM todo
    WHERE user_id = #{userId}
  </select>

  <select id="findById" parameterType="long" resultType="com.example.todo.vo.TodoVO">
    SELECT
      id,
      user_id AS userId,
      title,
      done
    FROM todo
    WHERE id = #{id}
  </select>

  <insert id="insertTodo" parameterType="com.example.todo.vo.TodoVO"
    useGeneratedKeys="true" keyProperty="id">
    INSERT INTO todo (user_id, title, done)
    VALUES (#{userId}, #{title}, #{done})
  </insert>

  <update id="updateTodo">
    UPDATE todo
    <set>
      <if test="title != null">title = #{title},</if>
      <if test="done != null">done  = #{done},</if>
    </set>
    WHERE id = #{id}
  </update>

  <delete id="deleteTodo" parameterType="long">
    DELETE FROM todo WHERE id = #{id}
  </delete>

</mapper>